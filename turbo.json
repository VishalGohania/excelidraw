{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "@repo/db#build": {
      "dependsOn": ["@repo/db#db:generate"],
      "outputs": ["dist/**", "dist/*.d.ts"] 
    },
    "@repo/backend-common#build": {
      "outputs": ["dist/**", "dist/*.d.ts"]
    },
    "http-backend#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "ws-backend#build": {  
      "dependsOn": ["@repo/db#build", "@repo/backend-common#build"],
      "outputs": ["dist/**", "dist/*.d.ts"]
    },
    "db:generate": {
      "cache": false,
      "outputs": ["node_modules/.prisma/**"]
    },
    "clean": {  
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
